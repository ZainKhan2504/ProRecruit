@model IEnumerable<ProRecruit.CandidateProject>
@{
    ViewBag.Title = "ProjectsMultipleView";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
@if (!Model.Any())
{
    <div class="container" style="text-align:center;">
        <h1>You haven't added any Projects yet!</h1>
    </div>
}

else
{
    <div class="col-lg-12">
        <div class="card border border-primary">
            <div class="card-header">
                <strong class="card-title"><b>Your Experience</b></strong>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Project Title</th>
                            <th scope="col">Project Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProjectTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProjectDescription)</td>
                                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

